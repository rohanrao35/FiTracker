extends layoutWorkout

block vars
    - var milesRun = [7, 5, 4, 6, 5, 11, 10];
    - var heartRate = [95, 90, 100, 110, 85, 90, 100];
    - var weightAtStart = [190, 180, 185, 180, 182, 181, 184];
    - var duration = "120";
    - var caloriesBurned ="300";
    - var totalMiles = 0;
    - var avgMiles = 0;
    - var numDays = 7;

block scripts
    script(src="https://cdn.plot.ly/plotly-latest.min.js")
block content
    center
        h1 Your Total Statistics for the Past 7 Workouts

        each val in milesRun
            script.
                #{totalMiles= totalMiles + val}
                
        h3 Miles Run #{totalMiles}

        script.
            #{avgMiles= totalMiles}
            #{avgMiles = totalMiles / numDays}
        
        h3 Your average per workout was #{avgMiles}
        div(id="myDiv")
        script.
           var trace1 = {
            x: [1, 2, 3, 4],
            y: [10, 15, 13, 17],
            mode: 'markers'
            };

            var trace2 = {
            x: [2, 3, 4, 5],
            y: [16, 5, 11, 10],
            mode: 'lines'
            };

            var trace3 = {
            x: [1, 2, 3, 4],
            y: [12, 9, 15, 12],
            mode: 'lines+markers'
            };

            var data = [ trace1, trace2, trace3 ];

            var layout = {
            title:'Line and Scatter Plot'
            };

            Plotly.newPlot('myDiv', data, layout);


        h3 Calories Burned
        div(id="myDiv1")
        script.
           var trace1 = {
            x: [1, 2, 3, 4],
            y: [10, 15, 13, 17],
            mode: 'markers'
            };

            var trace2 = {
            x: [2, 3, 4, 5],
            y: [16, 5, 11, 10],
            mode: 'lines'
            };

            var trace3 = {
            x: [1, 2, 3, 4],
            y: [12, 9, 15, 12],
            mode: 'lines+markers'
            };

            var data = [ trace1, trace2, trace3 ];

            var layout = {
            title:'Line and Scatter Plot'
            };

            Plotly.newPlot('myDiv1', data, layout);






    



