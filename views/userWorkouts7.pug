extends layout

block vars
    - var milesRun = miles
    - var heartRate = heart
    - var duration = time
    - var caloriesBurned = calories
    - var totalMiles = 0;
    - var avgMiles = 0;
    - var totalHeartRate = 0;
    - var avgHeartRate = 0;
    - var totalDuration = 0;
    - var avgDuration = 0;
    - var totalCalsBurned = 0;
    - var avgCalsBurned = 0;
    - var numDays = num

block scripts
    script(src="https://cdn.plot.ly/plotly-latest.min.js")
block content
    center
        h1 Total Statistics for the Past 7 Workouts



        each val in milesRun
            script.
                #{totalMiles= totalMiles + val}

        h3 Total Miles Run: #{totalMiles}

        script.
            #{avgMiles= totalMiles}
            #{avgMiles = totalMiles / numDays}
            #{avgMiles = Math.round(avgMiles)}


        h3 Miles Run per Workout: #{avgMiles}


        div(id="milesRun")
        script.
            var trace1 = {
                x: [1, 2, 3 , 4, 5, 6 , 7,],
                y: [#{milesRun}],
                mode: 'line'
            };

            var data = [trace1];

            var layout = {
                title:'Miles Run',
                xaxis: {
                    title: 'Workout',
                    showgrid: true,
                    zeroline: false,
                    showline: true,
                },
                yaxis: {
                    title: 'Miles Run',
                    showline: true,
                    rangemode: 'tozero'
                }
            };

            Plotly.newPlot('milesRun', data, layout);

        each val in heartRate
            script.
                #{totalHeartRate= totalHeartRate + val}

        script.
            #{avgHeartRate= totalHeartRate}
            #{avgHeartRate = totalHeartRate / numDays}
            #{avgHeartRate = Math.round(avgHeartRate)}

        h3 Average Heart Rate per Workout: #{avgHeartRate}


        div(id="heartRate")
        script.
            var trace2 = {
                x: [1, 2, 3 , 4, 5, 6 , 7,],
                y: [#{heartRate}],
                mode: 'line'
            };

            var data = [trace2];

            var layout = {
                title:'Heart Rate',
                xaxis: {
                    title: 'Workout',
                    showgrid: true,
                    zeroline: false,
                    showline: true
                },
                yaxis: {
                    title: 'Heart Rate (BPM)',
                    showline: true,
                    rangemode: 'tozero'
                }
            };

            Plotly.newPlot('heartRate', data, layout);


        each val in duration
            script.
                #{totalDuration= totalDuration + val}

        script.
            #{avgDuration = totalDuration}
            #{avgDuration = totalDuration / numDays}
            #{avgDuration = Math.round(avgDuration)}

        h3 Total Workout Duration: #{totalDuration} minutes
        h3 Average Workout Duration: #{avgDuration} minutes
  

        div(id="duration")
        script.
            var trace3 = {
                x: [1, 2, 3 , 4, 5, 6 , 7,],
                y: [#{duration}],
                mode: 'line'
            };

            var data = [trace3];

            var layout = {
                title:'Duration',
                xaxis: {
                    title: 'Workout',
                    showgrid: true,
                    zeroline: false,
                    showline: true,
                },
                yaxis: {
                    title: 'Duration (Minutes)',
                    showline: true,
                    rangemode: 'tozero'
                }
            };

            Plotly.newPlot('duration', data, layout);

        each val in caloriesBurned
            script.
                #{totalCalsBurned= totalCalsBurned + val}

        script.
            #{avgCalsBurned = totalCalsBurned}
            #{avgCalsBurned = totalCalsBurned / numDays}
            #{avgCalsBurned = Math.round(avgCalsBurned)}
            #{totalCalsBurned = Math.round(totalCalsBurned)}

        h3 Total Calories Burned: #{totalCalsBurned} calories
        h3 Average Calories Burned per Workout #{avgCalsBurned} calories



        div(id="caloriesBurned")

        script.
            var trace3 = {
                x: [1, 2, 3 , 4, 5, 6 , 7,],
                y: [#{caloriesBurned}],
                mode: 'line'
            };

            var data = [trace3];

            var layout = {
                title:'Calories Burned',
                xaxis: {
                    title: 'Workout',
                    showgrid: true,
                    zeroline: false,
                    showline: true
                },
                yaxis: {
                    title: 'Calories Burned',
                    showline: true,
                    rangemode: 'tozero'
                }
            };

            Plotly.newPlot('caloriesBurned', data, layout);
