extends layout

block content
  center
    h2 Add a new Workout
      .main.container
        .row
          .col-md-6.col-md-offset-3
            p.display-4.m-b-2 Log In
            form(method='post' action='/addWorkout')
              div.form-group
                label(for='milesRun') Miles Run
                p
                input.form-control(type='Number' id='milesRun' placeholder='Miles Run' name='milesRun')
                p
              div.form-group
                label(for='heartRate') Heart Rate
                p
                input.form-control(type='Number' id='heartRate' placeholder='Heart Rate' name='heartRate')
                p
                div.form-group
                label(for='weightAtStart') Weight at Start
                p
                input.form-control(type='Number' id='weightAtStart' placeholder='Weight At Start' name='weightAtStart')
                p
              div.form-group
                label(for='duration') Duration in Minutes
                p
                input.form-control(type='Number' id='duration' placeholder='Duration' name='duration')
                p
              button.btn.btn-primary(type='Submit') Add Workout
